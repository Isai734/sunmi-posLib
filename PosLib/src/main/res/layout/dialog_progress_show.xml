<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="4sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loader_afiliar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:background="@drawable/bg_radius_corner"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleProgressDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/color_inputs"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@id/cargando"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Enviando" />

        <ProgressBar
            android:id="@+id/cargando"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:indeterminate="true"
            android:indeterminateDuration="300"
            android:indeterminateTint="@color/colorPrimaryDark"
            android:indeterminateTintMode="src_atop"
            android:progressBackgroundTint="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleProgressDialog" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

