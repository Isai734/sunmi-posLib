<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="12sp"
    android:layout_marginEnd="12sp"

    android:elevation="8sp"
    app:cardCornerRadius="6sp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12sp"
        android:paddingBottom="12sp"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTituloConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Consulta"
            android:textColor="@color/color_inputs"
            android:textSize="26sp"
            android:textStyle="normal"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtSubtituloConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="50dp"
            android:gravity="center_horizontal"
            android:text="Litros Disponibles para Consumo"
            android:textColor="@color/color_inputs"
            android:textSize="18sp"
            android:textStyle="normal"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imageVerifyCard"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="TODO"
            android:src="@drawable/ic_alerta_i" />

        <TextView
            android:id="@+id/titleTempDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/color_inputs"
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Lorem Ipsum" />

        <TextView
            android:id="@+id/subtTempDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:maxLines="6"
            android:textColor="@color/color_inputs"
            android:textSize="18sp"
            android:textStyle="normal"
            tools:text="hola" />

        <Button
            android:id="@+id/btnCerrar"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/colorGrey"
            android:text="Cerrar"
            android:textColor="@color/colorBlueLightButton"
            android:visibility="gone"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>