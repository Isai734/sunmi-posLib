<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/success_online" />

        <TextView
            android:id="@+id/titleCuotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="-1.5sp"
            android:text="Elije una Cuota"
            android:textColor="@color/color_inputs"
            android:textSize="17.5sp"
            android:textStyle="normal" />

        <NumberPicker
            android:id="@+id/pickerQuotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26sp"
            android:layout_marginEnd="26sp" />

        <FrameLayout
            android:id="@+id/content_botton_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="12sp">

            <Button
                android:id="@+id/bntCanceltCuota"
                android:layout_width="@dimen/width_button_small"
                android:layout_height="@dimen/height_button_small"
                android:layout_marginEnd="12sp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13.5sp"
                android:visibility="visible"
                android:layout_gravity="start"
                android:background="@drawable/lb_background_transparente"
                android:text="@string/cancelar" />

            <com.pagatodo.sunmi.poslib.view.custom.ButtonSunmi
                android:id="@+id/bntAceptCuota"
                android:layout_width="@dimen/width_button_small"
                android:layout_height="@dimen/height_button_small"
                android:layout_gravity="end"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="13.5sp"
                app:background="@drawable/lb_btn_siguiente"
                app:text="@string/aceptar" />

        </FrameLayout>

    </LinearLayout>
</FrameLayout>