<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="FillHorizontalDialogStyleClient" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">95%</item>
        <item name="windowFixedWidthMinor">95%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="LedsRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlNormal">#7a7a7a</item>
        <item name="android:colorControlActivated">#9DD858</item>
        <item name="android:colorControlHighlight">#9DD858</item>
    </style>

    <style name="AnimacionModal" parent="@android:style/Animation.Activity">
        <item name="android:layout_width">600dp</item>
        <item name="android:windowEnterAnimation">@anim/agrandar</item>
        <item name="android:windowExitAnimation">@anim/disminuir</item>
    </style>

    <style name="Cancel_ButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">30dip</item>
        <item name="android:paddingEnd">30dip</item>
        <item name="android:textSize">@dimen/gen_dimen_txt_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:text">@string/cancelar</item>
    </style>

    <style name="Accept_ButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">30dip</item>
        <item name="android:paddingEnd">30dip</item>
        <item name="android:textSize">@dimen/gen_dimen_txt_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/aceptar</item>
    </style>

    <style name="key_board_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#46606a</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
